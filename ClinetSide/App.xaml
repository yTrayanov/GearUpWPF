<Application x:Class="ClientSide.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:userModel="clr-namespace:ClientSide.ViewBindingModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <userModel:CurrentUserBindingModel x:Key="CurrentUser" />


        <x:Array Type="sys:String" x:Key="NavigationAnonymous">
            <sys:String>Login</sys:String>
            <sys:String>Register</sys:String>
        </x:Array>

        <x:Array Type="sys:String" x:Key="NavigationUser">
            <sys:String>Cart</sys:String>
            <sys:String>Shop</sys:String>
            <sys:String>Orders</sys:String>
            <sys:String>Logout</sys:String>
        </x:Array>

        <x:Array Type="sys:String" x:Key="NavigationAdmin">
            <sys:String>CreateProduct</sys:String>
            <sys:String>Products</sys:String>
            <sys:String>Logout</sys:String>
        </x:Array>
    </Application.Resources>
</Application>
